<!DOCTYPE html>
<html>
  <head>
    <title>
      Wishmaker
    </title>
    <%= stylesheet_link_tag 'formtastic', 'my_formtastic_changes' %>
    <!--[if IE 6]><%= stylesheet_link_tag 'formtastic_ie6' %><![endif]-->
    <!--[if IE 7]><%= stylesheet_link_tag 'formtastic_ie7' %><![endif]-->
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="Header">
      <h1><%= @title %></h1>
    </div>
    <div id="Wrapper">
      <div id="Content">
        <div class="PermLinks">
          <div id="Left">
            <%= link_to(image_tag("icons/house.png"), products_path ) %> Home -
            <%= link_to(image_tag("icons/heart_add.png"), new_product_path ) %> Create
          </div>
          <div id="Right">
            Wishes: <%= Product.count %> -
            Total Price: <%= number_to_currency(Product.sum(:price)) %> - 
            Average Desire <%= (Product.sum(:desire)/Product.count.to_f).round %>
          </div>
        </div>
        <% if flash[:notice] %>
          <div class="notice"><%= flash[:notice] %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <div id="Footer">
      Copyright 2011 - Made by Somnie  
    </div>
  </body>
</html>
